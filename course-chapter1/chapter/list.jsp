<script type="text/javascript">
function myfun(){
	var prompt="${prompt }";
	
	if(prompt=="false"){
		alert("当前试题在试卷当中有记录，请先删除试卷！");
	}
}
window.onload = myfun;
	function dAll(obj){
		
	for (var i = 0; i < document.all.length; i++) {
			if (document.all(i).type == "checkbox") {
				switch (obj) {
				case 1:
					document.all(i).checked = true;
					break; //全选
				case 2:
					document.all(i).checked = false;
					break; //不选
				case 3: {
					if (document.all(i).checked == true) {
						document.all(i).checked = false;
					} else {
						document.all(i).checked = true;
					}
				}
					break; //反选
				}
			}
		}
	}
	function deleteAll(){
		var m = 0;
		flag = false;
		var str = "";
			for (i = 0; i < document.all.length; i++) {
				if (document.all(i).type == "checkbox"
						&& document.all(i).checked == true) {
					
					str +=  document.all(i).value+ ",";
					
					flag = true;
					m++;
				}
			}
			if (!flag) {
				alert("你没有选中任何数据");
				return false;
			}
			
			if (confirm("您确定要删除以上" + m + "条信息吗？")) {
				
				location.href = "${ctx}/chapter/allDelete?idlist=" + str;
				
			} else {
				return false;
			}
	}
</script>

</head>
